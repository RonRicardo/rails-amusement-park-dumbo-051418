<h2>Create a New User</h2>
<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :password %>
  <%= f.text_field :password %><br>
  <%= f.label :happiness %>
  <%= f.number_field :happiness %><br>
  <%= f.label :tickets %>
  <%= f.number_field :tickets %><br>
  <%= f.label :height %>
  <%= f.number_field :height %><br>
  <%= check_box_tag(:admin) %>
  <%= label_tag(:admin, "I am an administrator") %><br>
  <%= f.submit %>
<% end %>
